<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:fontFamily">@font/amaticsc_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="colorPrimary">@color/DarkRed</item>
        <item name="colorPrimaryDark">@color/DarkRed</item>
        <item name="colorAccent">@color/DarkRed</item>
        <item name="actionMenuTextAppearance">@style/Toolbar.TitleText
        </item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">50sp</item>
    </style>
</resources>
